package com.imooc.test;

public class Person2 {
    //私有属性：name（姓名）、age(年龄)、sex（性别）
    private String name;
    private int age;
    private char sex;
    
	public Person2() {

	}

    //带参构造方法（name、age、sex为参数）
	public Person2(String name,int age,char sex) {
		this.setName(name);
		this.setAge(age);
		this.setSex(sex);
	}

    //通过封装实现对属性的get/set方法设定
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public char getSex() {
		return sex;
	}

	public void setSex(char sex) {
		this.sex = sex;
	}
	
    //重写toString方法，表示形式为：姓名：+**+  年龄：+**+  性别：+**
	@Override
	public String toString() {
		
		
	}
}
