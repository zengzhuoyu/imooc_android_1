package com.imooc.test;

public class Work {
    // 属性：工作名
    private String name ;
    private String species;
    
	// 无参构造方法
    public Work() {
    	
    }
    
	// 带参构造方法，完成工作类型的赋值
    public Work(String name,String species) {
    	this.setName(name);    	
    	this.setSpecies(species);
    }
    
   // 公有的get***/set***方法完成属性封装
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getSpecies() {
		return species;
	}

	public void setSpecies(String species){
		this.species = species;
	}
	
	// 方法：工作描述，描述内容为：开心工作
	public String work() {//
		
		String str = "开心工作";
		return str;
		
	}	
}
